<div class="eventcardbody">
  <!-- Use a unique form id for each card -->
  <form id="myForm<%= num%>" action="/view_event/:eventId" method="post" style="display: none;">
    <input type="hidden" name="eventId" value="<%=events._id%>">
  </form>
  <!-- Pass the num value to the submitForm function -->
  <a href="#" onclick="submitForm('<%= num %>')"
    style="left: 0; position: absolute; text-decoration: none; display: inline-block; width: 100%; height: 100%;"
    id="event"></a>
  <img src="<%= events.eventPicture%>" alt="..." class="event_picture"
    onerror="this.onerror=null; this.src='/img/defaulteventpic.png'">
  <div class="event_details">
    <div class="editbtn">
      <a
        href="/event_edit?eventName=<%= events.eventName %>&eventDate=<%= events.eventDate %>&eventTime=<%= events.eventTime %>&eventLocation=<%= events.evenLocation %>&description=<%= events.description %>">
        <span class="material-symbols-outlined" id="editicon">
          edit_square
        </span>
      </a>
    </div>
    <h3 class="event_title">
      <%= events.eventName %>
        </h5>
        <h5 class="event_access">Event access</h5>
        <div class="date">
          <span class="material-symbols-outlined" id="calendar">event</span>
          <h4 class="event_date">
            <%= events.eventDate %>
          </h4>
        </div>
        <div class="time">
          <span class="material-symbols-outlined" id="clock">schedule</span>
          <h4 class="event_time">
            <%= events.eventTime %>
          </h4>
        </div>
        <div class="location">
          <span class="material-symbols-outlined" id="locationpin">
            location_on
          </span>
          <h4 class="event_location">
            <%= events.evenLocation %>
          </h4>
        </div>
        <h4 class="event_description">
          <%= events.description %>
        </h4>
  </div>
  
</div>


</div>


<script>
  // Function to submit the form
  function submitForm(num) {
    // Submit the form with the corresponding num value
    document.getElementById('myForm' + num).submit();
  }
</script>