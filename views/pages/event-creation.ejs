<%- include("../partials/header_after") %> 
<div class="content">
  <h1>Create an event</h1>
  <form action="/views/pages/event-submitted.html" method="post">
    <label for="event-picture">Upload a picture for your event</label> <br>
    <input type="file" id="event-picture" name="event-picture" accept="image/*">
    
    <label for="event-title">Event Title:</label> <br>
    <input type="text" id="event-name" name="event-name" required>
    
    <label for="event-date">Date:</label>
    <input type="date" id="event-date" name="event-date" required>
    
    <label for="event-time">Time:</label>
    <input type="time" id="event-time" name="event-time" required>
    
    <label for="event-location">Location:</label>
    <input type="text" id="event-location" name="event-location" required>
    
    <label for="event-access">Access:</label>
    <select id="event-access" name="event-access" onfocus='this.size=4;' onblur='this.size=0;' 
    onchange='this.size=1; this.blur();'>
      <option value="nil">Please select one...</option>
      <option value="public">Anyone can join</option>
      <option value="inviteonly">Invite only</option>
      <option value="approval">Registration needs approval</option>
    </select>

    <label for="event-description">Description:</label>
    <textarea id="event-description" name="event-description" required></textarea>
    
    <label for="event-fees">Fee:</label>
    <input type="number" id="event-fees" name="event-fees" min="0.00" max="10000.00" step="any">
    
    <label for="event-capacity">Seats or capacity:</label>
    <input type="number" id="event-capacity" name="event-capacity">

    
    <input type="submit" value="Create Event" class="create">
    <input type="button" value="Cancel" class="cancel">
    
  </form>
</div>
<%- include("../partials/footer", {currentPath: currentPath }) %> 