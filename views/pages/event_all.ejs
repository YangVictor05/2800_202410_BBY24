<%- include("../partials/header_after") %>
<link rel="stylesheet" href="/public/css/">

<%- include("../partials/header_between") %> 

  <div class="container">
    <div class="header">
      <select name="event_page" id="event_page" onfocus='this.size=1;' onblur='this.size=0;'
        onchange='this.size=1; this.blur();'>
        <option value="event_all">All Events</option>
        <option value="event_my">My Events</option>
      </select>
      <span class="material-symbols-outlined" id="filtericon">
        tune
      </span>
    </div>

    <div id="addeventbtn">
      <span class="material-symbols-outlined" id="circle">
        radio_button_unchecked
      </span>
      <span class="material-symbols-outlined" id="plus">
        add
      </span>
    </div>

    <!-- template for the cards so that it can be displayed dynamically -->
    <template id="eventcardtemplate">
      <div class="eventcardbody">
        <img src="..." alt="..." class="event_picture" onerror="this.onerror=null; this.src='/public/img/defaulteventpic.png'">
        <div class="event_details">
          <h3 class="event_title">Event Title</h5>
            <h5 class="event_access">Event access</h5>
            <div class="date">
              <span class="material-symbols-outlined" id="calendar">
                event
              </span>
              <h4 class="event_date">Event date</h4>
            </div>
            <div class="time">
              <span class="material-symbols-outlined" id="clock">
                schedule
              </span>
              <h4 class="event_time">Event time</h4>
            </div>
            <div class="location">
              <span class="material-symbols-outlined" id="locationpin">
                location_on
              </span>
              <h4 class="event_location">Event location</h4>
            </div>
            <h4 class="event_description">Event description here only 2 lines preview and </h4>
        </div>
      </div>
    </template>

    <div class="bottomwhitespace"></div>
  </div>

  <%- include("../partials/footer", {currentPath: currentPath }) %>